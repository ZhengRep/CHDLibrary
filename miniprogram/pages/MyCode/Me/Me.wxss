@import '../../../utils/colorui/icon.wxss';
@import '../../../utils/WeUI/common.wxss';

page{
    --white: #ffffff;
    --pink: #e03997;
    --blue: #0081ff;
  --gradualBlue: linear-gradient(45deg, #0081ff, #1cbbb4);
}

.page{
    background-color: var(--weui-BG-2);
    height: 100%;
}

.info_wrap{
    margin: 10px 5px;
    padding: 10px 5px;
    border-radius: 20px;
    display: flex;
    justify-content: space-between;
    font-size: 14px;
}  
.user-avatar {
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
    border-radius: 70rpx;
    background-color: #aaa;
}

.user_wrap_phone{
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.phone{
    text-align: left;
    padding-left: 10px;
}

.user_wrap {
    display: flex;
    justify-content: space-between;
    flex-direction: row;
}
.no-bind{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 5px;
}
.no-bind-wrap{
    display: flex;
    flex-direction: row;
}
.to-bind{
    display: flex;
    /* justify-content: center; */
    align-items: center;
    margin-right: 10px;
}

.bind_wrap{
    display: flex;
    justify-content: space-between;
    flex-direction: row;
}

.user-name{
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 10px;
}

.info-bd {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

  
  .bg-gradual-blue {
	background-image: var(--gradualBlue);
	color: var(--white);
}

.text-pink{
    color:var(--pink);
    font-size:15px;
    margin-left: 3px;
}

.text-blue{
    color:var(--blue);
    font-size:15px;
    margin-left: 3px;
}



.weui-agree__link {
    display: inline;
    color: var(--weui-LINK);
  }
  
  .weui-flex {
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center
  }
  
  .weui-cells {
    margin-top: 0;
    opacity: 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    font-size: 16px;
    -webkit-transition: .3s;
    transition: .3s
  }
  
  .weui-cells:after,
  .weui-cells:before {
    display: none
  }
.weui-cell{
    padding:5px 0;
    margin: 10px 30px 10px 40px;
    border-top: 0;
    border-bottom: 1px solid var(--weui-FG-3); 
  }

  
  .weui-cells_show {
    opacity: 1;
    -webkit-transform: translateY(0);
    transform: translateY(0)
  }
  
  .weui-cell:before {
    right: 15px;
    border-top: 0;
    /* border-bottom: 1px solid var(--weui-FG-3); */
  }
  
  .kind-list__item {
    margin: 10px 0;
    background-color: var(--weui-BG-2);
    border-radius: 2px;
    overflow: hidden;
    font-size: 16px;
    /* height: 40px; */
  }
  
  .kind-list__item:first-child {
    margin-top: 0
  }
  
  .kind-list__img {
    width: 30px;
    height: 30px
  }
  
  [data-weui-theme=dark] .kind-list__img {
    -webkit-filter: invert(100) hue-rotate(180deg);
    filter: invert(100) hue-rotate(180deg)
  }
  

  
  .kind-list__item-hd_show {
    opacity: .4;
    border-bottom: 0;
  }
  
  .kind-list__item-bd {
    height: 0;
    overflow: hidden;

  }
  
  .kind-list__item-bd_show {
    height: auto;
  }

   .kind-list__item-hd {
    padding: 0;
    margin: 10px 30px;
    border-bottom: 1px solid var(--weui-FG-3);
    -webkit-transition: opacity .3s;
    transition: opacity .3s
  }
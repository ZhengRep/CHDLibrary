@import '../../../../utils/WeUI/common.wxss';

page{
    --gradualGreen: linear-gradient(45deg, #39b54a, #8dc63f);
	--gradualPink: linear-gradient(45deg, #ec008c, #6739b6);
    --green: #39b54a;
    --orange: #f37b1d;
    --cyan: #1cbbb4;
    --gradualBlue: linear-gradient(45deg, #0081ff, #1cbbb4);
}
.page{
    background-color: var(--weui-BG-2);
    height: 100%;
}

.self-scroll{
    height: calc(100vh);
    margin: 8px 5px;
}
.card-wrap{
    display: flex;
    font-size: 16px;
    background-image: var(--gradualGreen);
    /* background-color: var(--green); */
    flex-direction: column;
    margin-top: 15px;
    margin-bottom: 15px;
    margin-right: 20px;
    margin-left: 15px;
    padding: 10px 10px;
    border-radius: 10px;
    color: var(--weui-FG-1);
}
.num-info{
    display: flex;
    flex-direction: row;
    margin: 1px;
}

.item-row-2{
    width: 40%;
    display: flex;
    flex-direction: row;
}
.item-row-3{
    width: 60%;
    display: flex;
    flex-direction: row;
}
.item-row-1{
    display: flex;
    flex-direction: row;
}

.body{
    padding-left: 5px;
    overflow: hidden;
}
.other-back{
    background-image: var(--gradualPink);
    /* background-color: var(--cyan); */
}
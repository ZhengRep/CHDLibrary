
@import '../../../../utils/WeUI/common.wxss';
page{
    --green: rgba(7,193,96);
    --halfred:#FE94A7;
    --red:#FF4F4F;
}
.page{
    background-color: var(--weui-BG-2);
    height: 100%;
}
.weui-vtabs-bar__activeitem {
    background-color: var(--weui-BG-2) !important;
    color: var(--weui-FG-0)!important;
    border-left-color: #07c160 !important;
}

.vtabs-content-item {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    /* border-bottom: 1px solid #ccc; */
    padding-bottom: 20px;
}

.item-title {
    font-size: 18px;
    margin: 0 10px;
}
.item-desc {
    margin: 0 10px;

    color: var(--weui-FG-1)
}

.weui-vtabs-bar__wrp {
    background-color: var(--weui-BG-0) !important;
}

.weui-vtabs-bar__item {
    background-color: var(--weui-BG-0);
    color: var(--weui-FG-0);
    border-left-color: var(--weui-FG-0);
}
.seats-wrap{
    display: flex;
    justify-content: center;
    margin: 20px 0px;
}
.room-wrap{
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 2px;
}

.seat-row{
    display: flex;
    flex-direction: row;
    height: 30px;
}
.seat-rowE1{
    display: flex;
    flex-direction: row;
    height: 30px;
    margin-top: 30px;
}
.seat-rowE2{
    display: flex;
    flex-direction: row;
    height: 30px;
    margin-top: 60px;
}

.self-scrollx{
    width: 100%;
    padding-left: 8px;
}



.seat{
    display: flex;
    flex-direction: row;

}
.seat-empty{
    height: 30px;
    width: 30px;
    border: 0.3px solid rgba(254,167, 72);
    border-radius: 6px;
}
.seat-emptyE1{
    height: 30px;
    width: 30px;
    border: 0.3px solid rgba(254,167, 72);
    border-radius: 6px;
    margin-left: 30px;
}
.seat-select{
    height: 30px;
    width: 30px;
    /* border: 0.3px solid var(--green); */
}
.seat-none{
    height: 30px;
    width: 30px;
    border: 0.3px solid var(--weui-BG-2);
    background-color: var(--weui-BG-2);
}
.seat-noneE1{
    height: 30px;
    width: 30px;
    border: 0.3px solid var(--weui-BG-2);
    background-color: var(--weui-BG-2);
    margin-left: 30px;
}

.click{
    background-color: var(--green);
    border: 0.3px solid var(--green);
    height: 30px;
    width: 30px;
    border-radius: 6px;
}


button {
    font-size: 14px;
    border-radius: 0;
}

.demo-title {
    font-size: 14px;
    color: gray;
    padding-left: 15px;
}

.demo-body {
    margin: 20px 0;
    height: 100px;
}
.btn-wrap-other{
    width: 100%;
    display: flex;
    position: fixed;
    bottom: 60px;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.btn-wrap{
    height: 40px;
    width: 180px;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.btn-left{
    width: 90px;
    height: 40px;
}
.btn-right{
    width: 90px;
    height: 40px;
}
.seat-halfselected{
    background-color: var(--halfred);
    border: 0.3px solid var(--halfred);
    height: 30px;
    width: 30px;
    border-radius: 6px;
}
.seat-halfselectedE1{
    background-color: var(--halfred);
    border: 0.3px solid var(--halfred);
    height: 30px;
    width: 30px;
    border-radius: 6px;
    margin-left: 30px;
}
.seat-selected{
    background-color: var(--red);
    border: 0.3px solid var(--red);
    height: 30px;
    width: 30px;
    border-radius: 6px;
}
.seat-selectedE1{
    background-color: var(--red);
    border: 0.3px solid var(--red);
    height: 30px;
    width: 30px;
    border-radius: 6px;
    margin-left: 30px;
}
.colorinfo-wrap{
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    font-size: 12px;
    align-items: center;
}
.colorinfo-item{
    display: flex;
    flex-direction: row;
    align-items: center;
}
